{
    "version": 2,
    "rewrites": [{ "source": "/api/(.*)", "destination": "/api" }],
    "builds": [
      {
        "src": "api/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "package.json",
        "use": "@vercel/next"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/index.js" },
      { "src": "/(.*)", "dest": "/src/app/page.js" }
      ]
  }
  